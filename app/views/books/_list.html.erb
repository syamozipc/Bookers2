<div class="container">
<h3>Books</h3>
<table class="table table-striped">
	<thead>
		<tr>
			<th colspan="1"></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% books.each do |book| %>
			<tr>
				<td>
					<%= link_to attachment_image_tag(book.user, :profile_image, fallback: "no_image.jpg", size: "30x30"), user_path(book.user) %></td>
				<td><%= link_to book.title, book_path(book) %></td>
				<td><%= book.body %></td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>