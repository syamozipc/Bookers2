<div class="container">
<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for(book) do |f| %>

<% if book.errors.any? %>
	<p>error</p>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<h4>Title</h4>
<%= f.text_field :title %>
 
<h4>Body</h4>
<%= f.text_area :body %>

<p><%= f.submit 'Create Book', class: "btn btn-primary" %></p>
 
<% end %>
</div>