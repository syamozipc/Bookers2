<div class="container">
<h2>User info</h2>

<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
	<p>error</p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
	<label>Name</label>
	<%= f.text_field :name, autofocus: true, placeholder:"name" %><br>
	<label>Image</label><br>
	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
	<label>Introduction</label>
	<%= f.text_area :introduction, autofocus: true, placeholder:"introduction" %><br>
	<%= f.submit "Update User" %>
<% end %>
</div>