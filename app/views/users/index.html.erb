<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/user', user: @user %>
			<%= render 'books/form', book: @book %>
		</div>

		<div class="col-xs-9">
			<h3>Users</h3>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="1"></th>
					</tr>
				</thead>
				<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "30x30" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user) %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>