<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<header class="p-5 navbar-inverse navbar-fixed-top">
  <h3 class="navbar-left head">Bookers</h3>
<ul class="navbar-right icon-list">
  <% if user_signed_in? %>
    <li class="icon">
        <%= link_to "Home", user_path(current_user.id), class: "glyphicon glyphicon-home" %>
    </li>
    <li class="icon">
        <%= link_to "Users", users_path, class: "glyphicon glyphicon-user" %>
    </li>
    <li class="icon">
        <%= link_to "Books", books_path, class: "glyphicon glyphicon-book" %>
    </li>
    <li class="icon">
        <%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
    </li>

  <% else %>
    <li class="icon">
        <%= link_to "Home", root_path, class: "glyphicon glyphicon-home" %>
    </li>
    <li class="icon">
        <%= link_to "About", home_about_path, class: "glyphicon glyphicon-link about" %>
    </li>
    <li class="icon">
        <%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up"  %>
    </li>
    <li class="icon">
        <%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
    </li>
  <% end %>
</ul>
</header>

  <p id="notice">
    <%= notice %>
  </p>

    <%= yield %>
  </body>
</html>
